{
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "react",
  "terminal.integrated.fontFamily": "Consolas NF",
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "editor.largeFileOptimizations": false,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "terminal.external.windowsExec": "wt",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.host": "0.0.0.0",
  "liveServer.settings.donotShowInfoMsg": true,
  "files.eol": "\n",
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 120,
  "prettier.arrowParens": "avoid",
  "git.autofetch": true,
  "discord.detailsEditing": "Editing a {Lang} file",
  "discord.lowerDetailsEditing": "üëª Where is my liver?",
  "discord.detailsDebugging": "Debugging a {Lang} file",
  "discord.lowerDetailsDebugging": "(‚ïØ¬∞‚ñ°¬∞)‚ïØÔ∏µ ‚îª‚îÅ‚îª",
  "discord.removeRemoteRepository": true,
  "redhat.telemetry.enabled": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "settingsSync.ignoredSettings": ["github.copilot.enable"],
  "VSCodeCounter.exclude": [
    "**/.gitignore",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/.env/**",
    "**/build/**",
    "**/dist/**",
    "**/package**.json"
  ],
  "VSCodeCounter.outputAsCSV": false,
  "VSCodeCounter.outputAsText": false,
  // language settings
  "code-runner.executorMap": {
    "java": "cd $dir && javac -encoding utf-8 $fileName && java $fileNameWithoutExt"
  },
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["-m", "black", "--line-length", "120"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  }
}
